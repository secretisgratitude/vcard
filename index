<body>
  <main class="card">
    <h1>Save Eric the Founder</h1>
    <p>We’ll download a contact card you can import into your phone’s contacts.</p>

    <div class="row">
      <!-- Fallback manual button -->
      <a id="manual" class="btn" href="EricTheFounder.vcf" download="EricTheFounder.vcf">
        📇 Download vCard
      </a>

      <!-- Optional: open Calendly or site if you want another CTA
      <a class="btn" style="background:#fff;color:#111" href="https://calendly.com/yourais/new-meeting">Book a call</a>
      -->
    </div>

    <p id="status" class="muted">Attempting auto-download…</p>

    <details class="muted" style="margin-top:10px;">
      <summary>Having trouble?</summary>
      <ul>
        <li><b>iPhone (Safari):</b> Tap <em>Download</em> → open the file in the download tray → <em>Share</em> → <em>Contacts</em>.</li>
        <li><b>Android (Chrome):</b> The file saves automatically; tap the download notification to import.</li>
        <li>If your in-app browser blocks downloads, tap the ••• menu and choose <em>Open in Safari/Chrome</em>, then try again.</li>
      </ul>
    </details>
  </main>

  <script>
    /**
     * Robust auto-download:
     *  - Fetch the vcf as a Blob (works around text/plain on some hosts)
     *  - Create an object URL and "click" a hidden <a download>
     *  - Falls back to the visible button if blocked
     */
    async function autoDownload() {
      const status = document.getElementById('status');
      try {
        const res = await fetch('EricTheFounder.vcf', { cache: 'no-store' });
        if (!res.ok) throw new Error('Fetch failed: ' + res.status);
        const blob = await res.blob();
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'EricTheFounder.vcf';
        document.body.appendChild(a);
        a.click();
        a.remove();
        setTimeout(() => URL.revokeObjectURL(url), 2000);
        status.textContent = 'If your phone didn’t prompt you, tap “Download vCard.”';
      } catch (err) {
        status.textContent = 'Auto-download was blocked. Tap “Download vCard.”';
        console.warn(err);
      }
    }
    // a slight delay improves reliability in some in-app browsers
    window.addEventListener('load', () => setTimeout(autoDownload, 800));
  </script>
</body>
